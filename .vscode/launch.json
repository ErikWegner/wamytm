    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tests",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/wamytmsite",
            "program": "${workspaceFolder}/wamytmsite/manage.py",
            "args": [
                "test"
            ],
            "django": true,
            "env": {
                "DJANGO_SETTINGS_MODULE": "wamytmsite.settings.test"
            }
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/wamytmsite",
            "program": "${workspaceFolder}/wamytmsite/manage.py",
            "args": [
                "runserver",
                "--noreload"
            ],
            "env": {
                "DJANGO_SETTINGS_MODULE": "wamytmsite.settings.docker-compose",
                "SECRET_KEY": "totally-random-data-here-to-encrypt-sensitive-data",
                "DEBUG": "TRUE"
            },
            "django": true,
            "justMyCode": false
        }
    ]
